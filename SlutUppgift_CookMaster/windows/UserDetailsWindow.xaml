<Window x:Class="SlutUppgift_CookMaster.windows.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlutUppgift_CookMaster.windows"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox x:Name="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox x:Name="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"/>
        <ComboBox ItemsSource="{Binding Countries, Mode=OneWay}" SelectedItem="{Binding Country, Mode=TwoWay}"/>


        <Button Content="Save" Click="Save_Click"/>
        <Button Content="Cancel" Click="Cancel_Click"/>
    </StackPanel>
</Window>
