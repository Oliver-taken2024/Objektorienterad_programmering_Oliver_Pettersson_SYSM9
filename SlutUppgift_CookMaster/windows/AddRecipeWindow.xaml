<Window x:Class="SlutUppgift_CookMaster.windows.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlutUppgift_CookMaster.windows"
        mc:Ignorable="d"
        Title="AddRecipeWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding TitleInput, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Text="{Binding IngrediantsInput, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Text="{Binding InstructionInput, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Text="{Binding CatagoryInput, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Add" Click="Add_Click"/>
    </StackPanel>
</Window>
