<Window x:Class="SlutUppgift_CookMaster.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlutUppgift_CookMaster"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <StackPanel>

        <TextBox Text="{Binding UserNameInput, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Text="{Binding PasswordInput, UpdateSourceTrigger=PropertyChanged}"/>
        
        <ComboBox ItemsSource="{Binding Countries, Mode=OneWay}" SelectedItem="{Binding Country, Mode=TwoWay}"/>
        <Button Content="Comfirm register" Click="Confirm_Click"/>

    </StackPanel>
</Window>
