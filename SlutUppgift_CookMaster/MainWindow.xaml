<Window x:Class="SlutUppgift_CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlutUppgift_CookMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <Label Content="Coockmaster" Margin="20" Background="Red" FontSize="90"/>
        <TextBox Text="{Binding UserNameInput, UpdateSourceTrigger=PropertyChanged}"  FontSize="30"/>
        <TextBlock Text="{Binding PasswordInput, UpdateSourceTrigger=PropertyChanged}" FontSize="30"/>
        <Button Content="Log in" FontSize="20" />
        <Button Content="Register" FontSize="20" Click="Register_Click"/>

    </StackPanel>
</Window>
